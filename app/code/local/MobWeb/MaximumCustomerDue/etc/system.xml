<?xml version="1.0"?>
<config>
    <sections>
        <maximumcustomerdue module="maximumcustomerdue">
            <tab>sales</tab>
            <label>Maximum Customer Due</label>
            <sort_order>9001</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <settings module="maximumcustomerdue">
                    <label>Payment Method Blocking Settings</label>
                    <expanded>1</expanded>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <maximum_customer_due>
                            <label>Maximum Order Due per Customer</label>
                            <validate>required-entry</validate>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[
                                Enter the maximum order amount due per customer. Customers exceeding this total will not be able to use the payment method(s) selected in the next field. Please enter this amount in your store's base currency.
                            ]]></comment>
                        </maximum_customer_due>
                        <blocked_payment_methods translate="label comment">
                          <label>Blocked Payment Methods</label>
                          <comment><![CDATA[
                            Select one or multiple payment methods to block when the customer reaches the specified total order due.
                          ]]></comment>
                          <validate>required-entry</validate>
                          <frontend_type>Multiselect</frontend_type>
                          <!-- TODO: Get just the active methods? -->
                          <source_model>adminhtml/system_config_source_payment_allowedmethods</source_model>
                          <sort_order>10</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>0</show_in_website>
                          <show_in_store>0</show_in_store>
                        </blocked_payment_methods>
                    </fields>
                </settings>
            </groups>
        </maximumcustomerdue>
    </sections>
</config>
